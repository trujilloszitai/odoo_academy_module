<odoo>
    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">academy.subject.form</field>
        <field name="model">academy.subject</field>
        <field name="arch" type="xml">
            <form string="Asignatura">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_subject_list" model="ir.ui.view">
        <field name="name">academy.subject.list</field>
        <field name="model">academy.subject</field>
        <field name="arch" type="xml">
            <list string="Asignaturas">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Asignaturas</field>
        <field name="res_model">academy.subject</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>