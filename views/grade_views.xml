<odoo>
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">academy.grade.form</field>
        <field name="model">academy.grade</field>
        <field name="arch" type="xml">
            <form string="CalificaciÃ³n">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_grade_list" model="ir.ui.view">
        <field name="name">academy.grade.list</field>
        <field name="model">academy.grade</field>
        <field name="arch" type="xml">
            <list string="Calificaciones">
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="value"
                    readonly="1" 
                    widget="badge"
                    decoration-danger="value &lt; 4.0"
                    decoration-info="value &gt;= 4.0 and value &lt; 7.0"
                    decoration-success="value &gt;= 7.0"
                />
            </list>
        </field>
    </record>

    <record id="action_grade" model="ir.actions.act_window">
        <field name="name">Calificaciones</field>
        <field name="res_model">academy.grade</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>