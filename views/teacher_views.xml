<odoo>
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">academy.teacher.form</field>
        <field name="model">academy.teacher</field>
        <field name="arch" type="xml">
            <form string="Profesor">
                <sheet>
                    <group>
                        <field name="partner_id" string="Nombre Completo"/>
                        <field name="file"/>
                        <field name="specialty"/>
                        <field name="hire_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_teacher_list" model="ir.ui.view">
        <field name="name">academy.teacher.list</field>
        <field name="model">academy.teacher</field>
        <field name="arch" type="xml">
            <list string="Profesores">
                <field name="partner_id" string="Nombre Completo"/>
                <field name="file"/>
                <field name="specialty"/>
                <field name="hire_date"/>
            </list>
        </field>
    </record>

    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Profesores</field>
        <field name="res_model">academy.teacher</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>